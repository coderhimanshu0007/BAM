<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:elevation="1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlCustomerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tviHeadingName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TotalOutstanding"
                    android:textColor="@color/color_value"
                    android:textSize="13sp"
                    app:fontFamily="@font/roboto_medium" />

                <LinearLayout
                    android:id="@+id/llExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_colapse"
                    android:orientation="vertical" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llCustomerDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tviHeading1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_forma_invoice"
                            android:drawablePadding="10dp"
                            android:text="@string/Invoice"
                            android:textColor="@color/color_value"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tviValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:text="123"
                            android:textColor="@color/logistics_amount"
                            android:textSize="10sp"
                            app:fontFamily="@font/roboto_bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tviHeading2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_group_amount"
                            android:drawablePadding="10dp"
                            android:text="Amount"
                            android:textColor="@color/color_value"
                            android:textSize="10sp"
                            app:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tviValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:text="0-30"
                            android:textColor="@color/logistics_amount"
                            android:textSize="10sp"
                            app:fontFamily="@font/roboto_bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/login_btn_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtBtnOpenSellsOrderAnalysis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawableRight="@drawable/ic_analysis_next"
                        android:drawablePadding="2dp"
                        android:gravity="center"
                        android:paddingLeft="11dp"
                        android:paddingRight="11dp"
                        android:text="DETAILS"
                        android:textColor="@color/login_bg"
                        android:textSize="10sp"
                        app:fontFamily="@font/roboto_medium" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>