<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tviYTD"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="YTD"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <View
                android:id="@+id/viYTD"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tviQTD"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="QTD"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <View
                android:id="@+id/viQTD"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_white"
                android:visibility="invisible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tviMTD"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="MTD"
                android:textColor="@color/color_white"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <View
                android:id="@+id/viMTD"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/color_white"
                android:visibility="invisible" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cviRSMHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    android:padding="3dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:id="@+id/llRSMLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_first_item_value"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tviName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:text="Sagar Pushkarna"
                            android:textColor="@color/color_value"
                            android:textSize="14sp"
                            app:fontFamily="@font/roboto_bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llYTD"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="14dp"
                                android:layout_weight="1"
                                android:background="@drawable/td_bg"
                                android:backgroundTint="@color/text"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="YTD"
                                    android:textColor="@color/color_value"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviYtd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="625.2"
                                    android:textColor="@color/color_value"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/roboto_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llQTD"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="14dp"
                                android:layout_weight="1"
                                android:background="@drawable/td_bg"
                                android:backgroundTint="@color/text"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="QTD"
                                    android:textColor="@color/color_value"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviQtd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="625.2"
                                    android:textColor="@color/color_value"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/roboto_bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="14dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="14dp"
                                android:layout_weight="1"
                                android:background="@drawable/td_bg"
                                android:backgroundTint="@color/text"
                                android:orientation="vertical"
                                android:padding="7dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="MTD"
                                    android:textColor="@color/color_value"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviMtd"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="625.2"
                                    android:textColor="@color/color_value"
                                    android:textSize="14sp"
                                    app:fontFamily="@font/roboto_bold" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="20dp"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    android:padding="3dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/color_heading_bg"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="YTD"
                            android:textColor="@color/color_value"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="QTD"
                            android:textColor="@color/color_value"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:text="MTD"
                            android:textColor="@color/color_value"
                            android:textSize="12sp"
                            app:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rviRSM"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="none" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>