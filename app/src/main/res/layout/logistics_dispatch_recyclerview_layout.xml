<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cviSPHeading"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="20dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:padding="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_customer"
                android:drawablePadding="5dp"
                android:text="Customer"
                android:textColor="@color/color_value"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tviCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="10sp"
                app:fontFamily="@font/roboto" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_shape_location"
                    android:drawablePadding="5dp"
                    android:text="From City"
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/tviFromCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text=""
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_shape_location"
                    android:drawablePadding="5dp"
                    android:text="To City"
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/tviToCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text=""
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawableLeft="@drawable/ic_group_hrs_days"
                    android:drawablePadding="5dp"
                    android:text="Hrs/Days"
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/tviHrsDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text=""
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/strock_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".32"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:text="Dispatch Pending"
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/tviDispatchPending"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight=".67"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:text="Dispatch Pending Value"
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/tviDispatchPendingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text=""
                    android:textColor="@color/color_value"
                    android:textSize="10sp"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/ic_forma_invoice"
                android:drawableTint="@color/end_header_color_bg"
                android:drawablePadding="5dp"
                android:text="Invoice"
                android:textColor="@color/color_value"
                android:textSize="12sp"
                app:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tviInvoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="10sp"
                app:fontFamily="@font/roboto" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>