<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/gradient_login_bg"
    android:foreground="@drawable/ic_mask_group_home"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:orientation="vertical">

        <com.teamcomputers.bam.Utils.CircularImageView
            android:id="@+id/iv_employee_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_profile"
            android:paddingTop="@dimen/nav_header_vertical_spacing" />

        <com.teamcomputers.bam.CustomView.TextViewCustom
            android:id="@+id/tv_employee_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/roboto"
            android:text="@string/user_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <com.teamcomputers.bam.CustomView.TextViewCustom
            android:id="@+id/tv_employee_email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Hello"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iviEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_employee_name"
            app:srcCompat="@drawable/ic_group_edit_profile" />
    </RelativeLayout>

</LinearLayout>
