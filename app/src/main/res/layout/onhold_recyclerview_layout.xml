<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tviInvoiceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="8"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="13"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviOnHoldAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviZoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="8"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviNOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="8"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviPaymentStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviRemainingAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_heading" />
</LinearLayout>