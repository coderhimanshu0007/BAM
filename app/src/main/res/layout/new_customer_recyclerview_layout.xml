<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="20dp"
    android:layout_marginBottom="2dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:padding="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/llRSMLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tviName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:text="Name"
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_bold" />

            <ImageView
                android:id="@+id/iviOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:tint="@color/color_value"
                app:srcCompat="@drawable/ic_more_vert_black" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviYTD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="123.44"
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/divider_color" />

            <TextView
                android:id="@+id/tviQTD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="123.44"
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:background="@color/divider_color" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/pBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="55dp"
                    android:layout_height="10dp"
                    android:indeterminate="false"
                    android:max="100"
                    android:minWidth="200dp"
                    android:minHeight="10dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/seekbar_drawable_progress"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tviMTD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pBar"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:gravity="center_horizontal"
                    android:text="123.44"
                    android:textColor="@color/color_value"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto_medium" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlStateWise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bg_statewise"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tviStateWise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State Wise"
                    android:textColor="@color/color_value"
                    android:textSize="14sp"
                    app:fontFamily="@font/roboto_medium" />

                <LinearLayout
                    android:id="@+id/llExpand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ic_colapse"
                    android:orientation="vertical" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rviStateCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:scrollbars="none"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>