<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:background="@color/color_white"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".4"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spinnYear"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/spinner_background"
                        android:popupBackground="@color/start_home_color_bg"
                        android:visibility="visible" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    android:padding="3dp"
                    app:cardCornerRadius="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sr_gradient_drawable"
                        android:gravity="center"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight=".22"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cviQuarterly"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="20dp"
                                android:layout_weight="1.3"
                                android:elevation="@dimen/cardview_compat_inset_shadow"
                                android:padding="3dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:id="@+id/llQuarterly"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/login_btn_bg"
                                    android:backgroundTint="@color/color_btn_bg"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:paddingLeft="11dp"
                                        android:paddingRight="11dp"
                                        android:text="QUARTERLY"
                                        android:textColor="@color/login_bg"
                                        android:textSize="10sp"
                                        app:fontFamily="@font/roboto_medium" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@+id/cviQuarterly"
                                android:layout_weight="1.3"
                                android:elevation="@dimen/cardview_compat_inset_shadow"
                                android:padding="3dp"
                                app:cardCornerRadius="5dp">

                                <LinearLayout
                                    android:id="@+id/llMonthly"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/login_btn_bg"
                                    android:backgroundTint="@color/color_btn_bg"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:paddingLeft="11dp"
                                        android:paddingRight="11dp"
                                        android:text="MONTHLY"
                                        android:textColor="@color/login_bg"
                                        android:textSize="10sp"
                                        app:fontFamily="@font/roboto_medium" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_weight="2"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_weight=".3"
                                    android:orientation="horizontal" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="30dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="14dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/login_btn_bg"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txtSalesAnalysis"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:drawableRight="@drawable/ic_analysis_next"
                                        android:drawablePadding="2dp"
                                        android:gravity="center"
                                        android:paddingLeft="11dp"
                                        android:paddingRight="11dp"
                                        android:text="ANALYSIS"
                                        android:textColor="@color/login_bg"
                                        android:textSize="10sp"
                                        app:fontFamily="@font/roboto_medium" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".25"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight=".3"
                                android:background="@drawable/rounded_corner_bg"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".2"
                                    android:paddingLeft="10dp"
                                    android:text="PERIOD"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="TARGET"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="ACTUAL"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".3"
                                    android:text="ACH%"
                                    android:gravity="center"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight=".6"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/llYTD"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".2"
                                    android:background="@drawable/rounded_corner_bg"
                                    android:backgroundTint="@color/color_td"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:text="CY"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviTargetYTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviActualYTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.teamcomputers.bam.CustomView.TextProgressBar
                                        android:id="@+id/progressBarYTD"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:max="100"
                                        android:maxHeight="10dip"
                                        android:minHeight="10dip"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/seekbar_drawable_progress" />

                                    <!--<com.teamcomputers.bam.CustomView.LineProgress
                                        android:id="@+id/line"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        app:progress="30"
                                        app:progress_color="@color/colorPrimary"
                                        app:stroke_width="10dp" />-->
                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llQTD"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".2"
                                    android:background="@drawable/rounded_corner_bg"
                                    android:backgroundTint="@color/color_td"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:text="CQ"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviTargetQTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviActualQTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.teamcomputers.bam.CustomView.TextProgressBar
                                        android:id="@+id/progressBarQTD"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:max="100"
                                        android:maxHeight="10dip"
                                        android:minHeight="10dip"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/seekbar_drawable_progress" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llMTD"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".2"
                                    android:background="@drawable/rounded_corner_bg"
                                    android:backgroundTint="@color/color_td"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="10dp"
                                    android:text="CM"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviTargetMTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviActualMTD"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".2"
                                    android:gravity="right"
                                    android:text="0"
                                    android:textColor="@color/login_bg"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_weight=".3"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.teamcomputers.bam.CustomView.TextProgressBar
                                        android:id="@+id/progressBarMTD"
                                        style="?android:attr/progressBarStyleHorizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:max="100"
                                        android:maxHeight="10dip"
                                        android:minHeight="10dip"
                                        android:progress="0"
                                        android:progressDrawable="@drawable/seekbar_drawable_progress" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_weight=".4"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        android:padding="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".4"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:text="Pending Sales Order"
                                    android:textColor="@color/color_value"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviOpenSalesOrder"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:text="0"
                                    android:textColor="@color/logistics_amount"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/roboto_bold" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/ic_oso"
                                    tools:ignore="VectorDrawableCompat" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/login_btn_bg"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtBtnOpenSellsOrderAnalysis"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableRight="@drawable/ic_analysis_next"
                                    android:drawablePadding="2dp"
                                    android:gravity="center"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:text="ANALYSIS"
                                    android:textColor="@color/login_bg"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/roboto_medium" />
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:elevation="@dimen/cardview_compat_inset_shadow"
                        android:padding="3dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".4"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:text="Net Receivables"
                                    android:textColor="@color/color_value"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:id="@+id/tviOutstanding"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginTop="8dp"
                                    android:text="0"
                                    android:textColor="@color/logistics_amount"
                                    android:textSize="16sp"
                                    app:fontFamily="@font/roboto_bold" />
                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight=".7">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    app:srcCompat="@drawable/ic_outstanding"
                                    tools:ignore="VectorDrawableCompat" />
                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/login_btn_bg"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/txtBtnOutstandingAnalysis"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableRight="@drawable/ic_analysis_next"
                                    android:drawablePadding="2dp"
                                    android:gravity="center"
                                    android:paddingLeft="11dp"
                                    android:paddingRight="11dp"
                                    android:text="ANALYSIS"
                                    android:textColor="@color/login_bg"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/roboto_medium" />
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".3"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:elevation="@dimen/cardview_compat_inset_shadow"
                    android:padding="3dp"
                    app:cardCornerRadius="5dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/sr_dso_gradient_drawable">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginBottom="10dp"
                                    app:srcCompat="@drawable/ic_group_174"
                                    tools:ignore="VectorDrawableCompat" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="horizontal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/ic_dso_map"
                            android:backgroundTint="@color/map_opacity_white"
