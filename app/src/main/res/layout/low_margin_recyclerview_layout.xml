<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tviCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="11"
            android:text="CustomerName"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviBu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="4"
            android:text="BU"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="5"
            android:text="Count"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviProjectNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="7"
            android:text="ProjectNo"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviHrsDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="6"
            android:text="HrsDays"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="6"
            android:text="Amount"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="13"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            android:visibility="gone"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviFinanceDelay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="9"
            android:text="Margin"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_heading" />
</LinearLayout>