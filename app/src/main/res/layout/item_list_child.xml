<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_child_root"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/material_gray_100"
    android:clickable="true"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_nav_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_drawer_cake_blue"
            android:visibility="invisible" />

    </LinearLayout>

    <com.teamcomputers.bam.CustomView.TextViewCustom
        android:id="@+id/tv_nav_item"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fontFamily="@font/roboto"
        android:gravity="start|center"
        android:text="@string/user_name"
        android:textColor="@color/text_color_login"
        android:textSize="14sp" />

</LinearLayout>