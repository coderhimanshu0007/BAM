<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tviCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="13"
            android:text="Customer"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviProjectNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="7"
            android:text="ProjectNo"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="4"
            android:text="Count"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviHrsDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="6"
            android:text="HrsDays"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviHeadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="12"
            android:text="Head Name"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:text="Reason"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_heading" />
</LinearLayout>