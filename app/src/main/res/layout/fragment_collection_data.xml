<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/border_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviExpectedCollectionthisWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="@string/ExpectedCollectionthisWeek"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viExpectedCollectionthisWeek"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviExpectedCollectionthisMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="@string/ExpectedCollectionthisMonth"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viExpectedCollectionthisMonth"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviPaymentCollectionthisWeek"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="@string/PaymentCollectionthisWeek"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viPaymentCollectionthisWeek"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviPaymentCollectionthisMonth"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="@string/PaymentCollectionthisMonth"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viPaymentCollectionthisMonth"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color"
                                android:visibility="invisible" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="330dp"
                android:layout_height="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No. of Invoices"
                        android:textSize="12sp"
                        app:fontFamily="@font/source_sans_pro" />

                    <TextView
                        android:id="@+id/tviNoofInvoice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/logistics_amount"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount"
                        android:textSize="12sp"
                        app:fontFamily="@font/source_sans_pro" />

                    <TextView
                        android:id="@+id/tviAmounts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/logistics_amount"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/montserrat" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_heading" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/color_heading_bg"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tviInvoiceNoHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="Invoice No"
                                android:textColor="@color/color_heading"
                                android:textSize="13sp"
                                app:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tviCustomerHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="Customer"
                                android:textColor="@color/color_heading"
                                android:textSize="13sp"
                                app:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tviAmountHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="Amount"
                                android:textColor="@color/color_heading"
                                android:textSize="13sp"
                                app:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tviExpectedDateHeading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:text="Expected Date"
                                android:textColor="@color/color_heading"
                                android:textSize="13sp"
                                app:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_heading" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rviData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:minHeight="200dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>