                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/border_bg"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
