                                android:text="DOA"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viDOA"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviDOAApproved"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="DOA Approved"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viDOAApproved"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/color_border" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tviDOARejected"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:text="DOA Rejected"
                                android:textSize="12sp"
                                app:fontFamily="@font/roboto" />

                            <View
                                android:id="@+id/viDOARejected"
                                android:layout_width="match_parent"
                                android:layout_height="3dp"
                                android:background="@color/login_btn_color"
                                android:visibility="invisible" />

                        </LinearLayout>

                        <View
