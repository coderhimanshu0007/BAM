<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:elevation="@dimen/cardview_compat_inset_shadow"
    android:padding="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:id="@+id/llRSMLayout"
        android:layout_width="match_parent"
        android:background="@drawable/border_bg_statewise"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg_statewise"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviStateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_bold" />


            <LinearLayout
                android:id="@+id/llOption"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iviOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:tint="@color/color_value"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_more_vert_black" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tviStateYTD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tviStateQTD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

            <TextView
                android:id="@+id/tviStateMTD"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color_value"
                android:textSize="14sp"
                app:fontFamily="@font/roboto_medium" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
