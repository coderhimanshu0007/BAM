<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tviCustomer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="15"
            android:text="Customer"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviFromCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="From City"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviToCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:text="To City"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            android:visibility="gone"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviHrsDays"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="6"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviDispatchPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="6"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviDispatchPendingValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="8"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />

        <TextView
            android:id="@+id/tviInvoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:ems="10"
            android:textColor="@color/color_value"
            android:textSize="12sp"
            app:fontFamily="@font/roboto" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_heading" />
</LinearLayout>